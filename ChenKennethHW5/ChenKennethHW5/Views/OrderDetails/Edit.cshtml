@model ChenKennethHW5.Models.OrderDetail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Order Item</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderDetailID" />
            <input type="hidden" asp-for="Order.OrderID" />
            <input type="hidden" asp-for="Product.ProductID" />
            
            <div class="form-group">
                <label>Product</label>
                <input value="@Model.Product.Name" class="form-control" readonly />
            </div>
            
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" readonly />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ExtendedPrice" class="control-label"></label>
                <input asp-for="ExtendedPrice" class="form-control" readonly />
                <span asp-validation-for="ExtendedPrice" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-orderId="@Model.Order.OrderID">Back to Order Items</a>
</div>
