<h1>Add Product to Order</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Order.OrderID)

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Product.ProductID" class="control-label">Product</label>
        <select asp-for="Product.ProductID" class="form-control" asp-items="ViewBag.AllProducts"></select>
        <span asp-validation-for="Product.ProductID" class="text-danger"></span>
    </div>

  
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add to Order</button>
</form>

<div>
    <a asp-action="Index" asp-controller="Orders">Back to Orders</a>
</div>
